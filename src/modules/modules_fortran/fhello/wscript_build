obj = bld.new_task_gen(features='fortran fshlib')
obj.source = bld.glob('*.F03')
obj.includes = ". ../../../fortran"
obj.export_incdirs = "."
obj.target = 'mechanic_module_fhello'
obj.name = 'fhello'
obj.after = 'fortran'

bld.install_files('${PREFIX}/lib', 'libmechanic_module_fhello.'+bld.env['MECHANIC_LIBEXT'])
